{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div
        class="content-wrapper">

        <!-- Main content -->
        <section class="content">
            <br>
                <!-- /.row -->
                <div class="row">
                    <div class="col-md-8 offset-1 ">
                        <div class="card card-indigo">
                            <div class="card-header ">
                                <a href="{{ path('filieres_imprimer') }}">Imprimer</a>
                            </div>

                            <div class="card-body table-danger table-responsive p-0" style="height: 390px;">
                                <table class="table table-head-fixed table-bordered">

                                    <tbody>
                                        <tr>
                                            <th style="width:3%;">ID</th>
                                            <th>Filiere</th>

                                        </tr>
                                        {% for filiere in filieres %}
                                            <tr>
                                                <td>
                                                    {{ filiere.id }}
                                                </td>
                                                <td>
                                                    <strong>{{ filiere.sigle }}</strong>
                                                    <br>
                                                        <i>{{ filiere.nom }}</i>
                                                    </td>

                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="2">Liste vide !</td>
                                                </tr>
                                            {% endfor %}

                                        </tbody>
                                    </table>

                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer" style="background:gray">@Developp√© par: BITSA NDZIE PASCAL</div>
                            </div>
                        </div>


                    </div>
                {% endblock %}
