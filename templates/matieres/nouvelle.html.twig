{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div
        class="content-wrapper">

        <!-- Main content -->
        <section class="content">
            <br>
                <div class="row">

                    <div class="col-8 offset-1">

                        <div class="card card-yellow">
                            <div class="card-header">
                                <form action="{{ path('quantite_matiere') }}" method="post">
                                    <div class="form-inline">
                                        <input type="number" name="nb_row" class="form-control" value="2" min='1'>
                                            <button type="submit" class="form-control">Ok</button>
                                        </div>
                                    </form>

                                </div>
                                <!-- /.card-header -->
                                <div class="card-header">
                                    <a href="{{ path('liste_matiere') }}">Consulter la liste des matieres</a>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body table-warning table-responsive p-0" style="height: 350px;">
                                    <form action="" method="post">
                                        <table class="table table-head-fixed text-nowrap">

                                            <tbody>
                                                <tr class='row'>
                                                    <th class='col'> 
                                                        Filiere
                                                        <select type="text" name="filiere" class="form-control" id="">
                                                            {% for row in filieres %}
                                                                <option value="{{row.id}}">{{row.nom}}</option>
                                                            {% else %}
                                                                <option value=""></option>
                                                            {% endfor %}
                                                        </select>
                                                    </th>
                                                    <th class='col'>
                                                        Niveau
                                                        <select type="text" name="niveau" class="form-control" id="">
                                                            {% for row in niveaux %}
                                                                <option value="{{row.id}}">{{row.nom}}</option>
                                                            {% else %}
                                                                <option value=""></option>
                                                            {% endfor %}
                                                        </select>
                                                    </th>
                                                    <th class='col'>
                                                        Semestre
                                                        <select type="text" name="semestre" class="form-control" id="">
                                                            {% for row in semestres %}
                                                                <option value="{{row.id}}">{{row.nom}}</option>
                                                            {% else %}
                                                                <option value=""></option>
                                                            {% endfor %}
                                                        </select>
                                                    </th>
                                                </tr>
                                                <tr>
                                                    <th>Matiere</th>
                                                </tr>

                                                {% for nb_row in nb_rows %}
                                                    <tr class='row'>
                                                        <th class='col'>
                                                            <input type="text" name="matiere{{ nb_row }}" class="form-control" placeholder="matiere n°{{nb_row+1}}" id="">
                                                        </th>
                                                        <th class='col'>
                                                            <input type="text" name="note{{ nb_row }}" class="form-control" placeholder="note n°{{nb_row+1}} Ex: 20" id="">
                                                        </th>
                                                        </tr>

                                                    {% endfor %}


                                                </tbody>
                                                <!-- /.tbody -->
                                            </table>

                                        </div>
                                        <!-- /.card-body -->
                                        <div class="card-footer" style="background:orange">
                                            <button type="submit" name="enregistrer" class="btn btn-warning form-control offset-1 col-10">Enregistrer</button>
                                            <br>
                                                <br></form>
                                                <!-- /.form -->

                                            </div>
                                        </div>

                                    </div>

                                </div>
                                <!-- /.card -->

                            </div>
                            <!-- /.col -->


                        </div>

                        <!-- /.row -->

                    </div>

                </div>

            </section>
        </div>
    {% endblock %}
